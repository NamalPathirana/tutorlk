<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5FFFFFF"
    tools:context=".Tutor_form">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-37dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="#00221515">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="217dp"
                android:layout_height="52dp"
                android:layout_marginStart="96dp"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="936dp"
                android:text="Upload profile pic"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ProgressBar
                android:id="@+id/btnstdFormprogressbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="392dp"
                android:layout_height="17dp"
                android:layout_above="@+id/btnChooseTutorimage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="500dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:ignore="MissingConstraints" />


            <Button
                android:id="@+id/btnstdFormUploadPic"
                android:layout_width="341dp"
                android:layout_height="37dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="176dp"
                android:text="upload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="652dp"
                android:text="Educational State"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="788dp"
                android:text="Address"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/stdFormEducationalState"
                android:layout_width="313dp"
                android:layout_height="36dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="696dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:hint="Education qualifications"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/stdFormNIC"
                android:layout_width="313dp"
                android:layout_height="36dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="564dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:hint="V123.."
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="276dp"
                android:text="PhoneNumber"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/stdFormAddress"
                android:layout_width="313dp"
                android:layout_height="36dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="844dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:hint="Address..."
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/stdFormNumber"
                android:layout_width="313dp"
                android:layout_height="36dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="312dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="number|textPersonName"
                android:text="+94"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/stdFromDateOfBirth"
                android:layout_width="313dp"
                android:layout_height="36dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="440dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:hint="DD/MM/YY"
                android:inputType="date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="512dp"
                android:text="Nic"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="392dp"
                android:text="Date of birth"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="1212dp"
                android:hint="Brife Discription"
                android:text="Notable remarks"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="156dp"
                android:text="Name"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/stdFormName"
                android:layout_width="314dp"
                android:layout_height="39dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="204dp"
                android:layout_marginEnd="8dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:hint="name"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.065"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/stdFormRemarks"
                android:layout_width="306dp"
                android:layout_height="154dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="1256dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:textAlignment="inherit"
                android:textSize="14sp"
                android:verticalScrollbarPosition="right"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />

            <Button
                android:id="@+id/btnStdCreateAccount"
                android:layout_width="144dp"
                android:layout_height="52dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="1516dp"
                android:layout_marginBottom="100dp"
                android:background="@color/design_default_color_secondary"
                android:text="Create"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/stdFromPic"
                android:layout_width="179dp"
                android:layout_height="122dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:ignore="MissingConstraints"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>