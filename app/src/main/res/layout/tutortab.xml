<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    >

    <RelativeLayout
        android:layout_width="401dp"
        android:layout_height="72dp"
        android:layout_margin="4dp">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/tutor_image"
            android:layout_width="60dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="4dp"
            app:siBorderColor="@color/MainBackground"
            app:siBorderWidth="6dp" />



        <!--<ImageView-->
        <!--android:id="@+id/std_image"-->
        <!--android:layout_width="58dp"-->
        <!--android:layout_height="68dp"-->
        <!--android:layout_alignParentStart="true"-->


        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginStart="4dp"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:padding="8dp" />-->

        <TextView
            android:id="@+id/tutor_edu_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="7dp"
            android:text="Tutor name"
            android:textColor="@color/headerText"

            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tutor_expt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"


            android:layout_marginStart="74dp"
            android:layout_marginTop="43dp"
            android:text="educational expertise.."
            android:textColor="@color/suppourtText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/TutorTabLikes"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tutor_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="337dp"
            android:layout_marginTop="37dp"
            android:textAlignment="gravity"
            android:textColor="@color/startblue"
            android:textDirection="rtl"
            android:textSize="17sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>